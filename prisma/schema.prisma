// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Website { 
  id                     Int     @default(autoincrement()) @id
  name                   String  @unique
  searchUrl              String
  baseUrl                String?
  isBaseUrlNeeded        Boolean @default(true)
  spaceHandler           String  @default("+")
  rowSelector            String?
  nameSelector           String?
  linkSelector            String?
  seedsSelector          String?
  leechesSelector        String?
  dateSelector           String?
  sizeSelector           String?
  magnetSelector         String?
  skipStartRows          Int?
  skipEndRows            Int?
  endSymbols             String?
  dateFormat             String?
}